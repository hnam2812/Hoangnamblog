
<% provide(:title, "Edit comment") %>
<h2>Update your Comment</h2>
<div class="row">
	<%= form_for(@comment) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="col-md-6">
		<%= f.text_area :content, class: "form-control" %>
		<div class="col-md-2">
		<%= f.submit "Edit", class: "btn btn-primary form-control" %>
	</div>	
	</div>
</div>
<% end %>
