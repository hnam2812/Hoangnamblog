<%= form_for(@entry) do |f| %>
<%= render 'shared/error_messages', object: f.object %>
<div class="form-group">
	<div class="col-md-12">
		<%= f.text_field :title, placeholder: "Entry title", class: "form-control"%>
	</div>
</div>
<div class="form-group">
	<div class="col-md-12">
		<%= f.text_area :content, placeholder: "Your entry here!", class: "form-control" %>
	</div>
</div>
<div class="form-group">
	<div class="col-md-4">
		<%= f.submit "Post", class: "btn btn-primary" %>
	</div>
</div>
<% end %>
