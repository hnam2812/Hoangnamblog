<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-3">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
     <section class="stats">
      <%= render 'shared/stats' %>
    </section>

  </aside>

    <div class="col-md-9">
     <%= render 'follow_form' if logged_in? %>
    <% if @user.entry.any? %>
      <h3>Entries (<%= @user.entry.count %>)</h3>
      <ol class="entries">
        <%= render @entries %>
      </ol>
      <%= will_paginate @entries %>
    <% end %>
  </div>

</div>